<view class="container show-location-info-container">
    <!-- 输入信息的区域 -->
    <view class="input-container">
        <view class="input-box name">
            <text>姓名</text>
            <input type="text" placeholder="收货人姓名"></input>
        </view>
        <view class="input-box phone">
            <text>手机号</text>
            <input type="number" maxlength="{{ 11 }}" placeholder="收件人电话"></input>
        </view>
        <view class="input-box location">
            <text>详细地址</text>
            <input type="text" placeholder="需要具体到街道、小区、门牌号"></input>
        </view>
    </view>
    <!-- 添加按钮 -->
    <view class="bottom-control-btn-box">
        <button class="single-btn">保存地址</button>
    </view>
</view>
