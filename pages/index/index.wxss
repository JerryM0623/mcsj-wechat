/* 设置首页的背景颜色 */
.index-container{
    background-color: #eeeeee;
    /* background-color: #000000; */
}

/* 设置搜索框 */
.search-box{
    width: calc(100% - 60rpx);
    height: 80rpx;
    margin-top: 20rpx;
    line-height: 80rpx;
    background-color: #ffffff;
    border-radius: 100rpx;
    border: 2rpx solid #ffffff;
    font-size: 32rpx;
    color: #707070;
    text-align: center;
}

/* 轮播图的样式设计 */
.carousel-box{
    width: 100%;
    height: 350rpx;
    margin-top: 20rpx;
}
.carousel-box .carousel{
    width: calc(100% - 60rpx);
    height: 100%;
    margin: 0 auto;
    border-radius: 30rpx;
    overflow: hidden;
}
.carousel-box .carousel .carousel-item image{
    width: 100%;
    height: 100%;
}

/* 分类列表的样式 */
.types-box{
    display: flex;
    height: 200rpx;
    width: calc(100% - 60rpx);
    margin-top: 20rpx;
}
.types-box .type-item{
    width: 33.3333%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.types-box .type-item:nth-child(2){
    align-items: center;
}
.types-box .type-item:nth-last-child(1){
    align-items: flex-end;
}
.types-box .type-item image{
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 20rpx;
}
.types-box .type-item text{
    color: #000000;
    width: 100rpx;
    text-align: center;
}

/* 精彩推荐的样式 */
.recommend-box{
    width: calc(100% - 60rpx);
    margin-top: 20rpx;
}
.recommend-box .recommend-title{
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 40rpx;
    font-weight: 700;
    color: #cb141d;
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid #bbbbbb;
}
.recommend-box .recommend-list{
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.recommend-box .recommend-list .recommend-list-item{
    background-color: #ffffff;
    width: calc((100% - 20rpx) / 2);
    height: 450rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 20rpx;

    position: relative;
}
.recommend-box .recommend-list .recommend-list-item .list-item-image{
    width: 100%;
    height: 300rpx;
}
.recommend-box .recommend-list .recommend-list-item .list-item-name,
.recommend-box .recommend-list .recommend-list-item .list-item-price{
    padding: 0 20rpx;
}
.recommend-box .recommend-list .recommend-list-item .list-item-name{
    /* 最多两行，多余部分...表示 */
    display: -webkit-box;       
    -webkit-box-orient: vertical;         
    -webkit-line-clamp:2; 
    overflow: hidden;    
    word-break: break-all;    
    word-wrap: break-word;   
}
.recommend-box .recommend-list .recommend-list-item .list-item-price{
    color: #cb141d;
    font-size: 34rpx;
    font-weight: 700;
    position: absolute;
    bottom: 16rpx;
}