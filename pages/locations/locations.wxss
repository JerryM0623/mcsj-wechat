.locations-container{
  height: 100%;
  background-color: rgb(214, 214, 214);
}

.list{
  width: 750rpx;
  margin: 0 auto;
}

.item{
  background-color: white;
  margin: 20rpx ;
  border-radius: 16rpx;
  padding: 20rpx;
}

.item .user-info{
  margin-bottom: 10rpx;
}

.item .user-info text:nth-child(1){
  margin-right: 20rpx;
}

.item .location-info{
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #c9c9c9;
  font-size: 28rpx;
  color: #6d6d6d;
}

.item .location-control{
  padding-top: 10rpx;
  font-size: 20rpx;
  color: #6d6d6d;
  position: relative;
  height: 30rpx;
}

.item .location-control text:nth-child(2){
  position: absolute;
  right: 20rpx;
}
.item .location-control text:nth-child(1){
  position: absolute;
  right: 80rpx;
}

.control-btn{
  width: 100%;
  height: 130rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;

  display: flex;
  justify-content: center;
  align-items: center;
}

.control-btn button{
  width: 70%;
  background-color: #cb141d;
  border-radius: 20px;
  color: white;
  font-size: 32rpx;
}