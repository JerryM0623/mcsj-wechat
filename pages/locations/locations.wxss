.locations-container{
  background-color: rgb(214, 214, 214);
  padding-bottom: 130rpx;
}

.list{
  width: 750rpx;
  margin: 0 auto;
}

.item-box{
  background-color: white;
  margin: 20rpx ;
  border-radius: 16rpx;
  padding: 20rpx;
}

.item-box .user-info{
  margin-bottom: 10rpx;
}

.item-box .user-info text:nth-child(1){
  margin-right: 20rpx;
}

.item-box .location-info{
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #c9c9c9;
  font-size: 28rpx;
  color: #6d6d6d;
}

.item-box .location-control{
  padding-top: 10rpx;
  font-size: 20rpx;
  color: #6d6d6d;
  position: relative;
  height: 30rpx;
}

.item-box .location-control text:nth-child(2){
  position: absolute;
  top: 10px;
  right: 20rpx;
}
.item-box .location-control text:nth-child(1){
  position: absolute;
  top: 10px;
  right: 80rpx;
}