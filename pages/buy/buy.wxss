page{
    background-color: #eee;
}
.buy-container{
    width: 100%;
    min-height: calc(100% - 130rpx);
    padding-bottom: 130rpx;
}
.location-choose{
    margin: 20rpx;
    width: calc(100% - 80rpx);
    background-color: white;
    min-height: 150rpx;
    border-radius: 20rpx;
    padding: 20rpx;
}
.no-location{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #888;
    font-weight: 700;
    letter-spacing: 4rpx;
    size: 40rpx;
}
.have-location{
    position: relative;
}
.have-location .location-box{
    width: 90%;
    margin-bottom: 20rpx;
    font-size: 32rpx;
}
.have-location .name-box,
.have-location .person-box{
    font-size: 28rpx;
}
.have-location .name-box{
    margin-bottom: 20rpx;
}
.have-location .tip{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    font-size: 28rpx;
    color: #777;
}

.product-box{
    margin: 20rpx;
    padding: 20rpx;
    width: calc(100% - 80rpx);
    height: 200rpx;
    border-radius: 20rpx;
    background-color: white;

    display: flex;
}
.left-image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
    overflow: hidden;
    flex-shrink: 0;
}
.left-image image{
    width: 200rpx;
    height: 200rpx;
}
.info-box{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.info-box .middle-name{
    font-size: 36rpx;
    font-weight: 700;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
    word-wrap: break-word;
}
.info-box .right-price{
    font-size: 28rpx;
}

.number-input{
    margin: 20rpx;
    padding: 20rpx;
    width: calc(100% - 80rpx);
    height: 30rpx;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
}
.label-title{
    flex-shrink: 0;
    width: 160rpx;
}
.number-input input{
    width: 100%;
}

.total-price,
.buy-btn{
    flex: 1;
    height: calc(100% - 40rpx);
}
.total-price{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}
.total-price text:nth-child(1){
    margin-right: 10rpx;
}
.total-price .price{
    color: #cb141d;
    font-size: 36rpx;
    font-weight: 700;
}
.buy-btn{
    background-color: #cb141d;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 700;
    border-radius: 50rpx;
    margin-right: 20rpx;
    color: white;
}