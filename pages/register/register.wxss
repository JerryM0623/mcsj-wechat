.register-container{
    width: 100%;
    height: 100%;
    position: relative;
}

.wrapper{
    width: 100%;
    position: absolute;
    top: 200rpx;
}

.title{
    font-weight: 700;
    font-size: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}

.account, .password, .password-check, .username{
    height: 80rpx;
    line-height: 80rpx;
    padding: 10rpx;
    width: 70%;
    border-bottom: 1px solid #e7e7e7;
    margin: 0 auto;
}

.register{
    width: 70% !important;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #cb141d;
    color: white;
    padding: 0;
    margin: 0;
    margin-top: 20rpx;
}

.register:active{
    background-color: #b31921;
}