page{
    background-color: #eee;
}

.show-order-info-container{
    width: calc(100% - 40rpx);
    margin: 20rpx;
}

.card{
    width: calc(100% - 40rpx);
    background-color: white;
    padding: 20rpx 20rpx 0;
    border-radius: 20rpx;
}

.image-box{
    border-radius: 20rpx;
    overflow: hidden;
    width: 100%;
    height: 600rpx;
}
.image-box image{
    width: 100%;
    height: 100%;
}
.top{
    border-bottom: 4rpx solid #ccc;
}
.line{
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0 ;
}
.line .label{
    width: 200rpx;
    flex-shrink: 0;
}
.line .content{
    text-align: right;
}
.line .product-name{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
    word-wrap: break-word;
}